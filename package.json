{
	"name": "ardrive-daemon",
	"version": "0.0.1",
	"description": "ArDrive Daemon is a cross-platform desktop wrapper of the ArDrive Core-JS and used for synchronizing data to and from Arweave.",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"dependencies": {
		"ardrive-core-js": "https://github.com/ardriveapp/ardrive-core-js.git#task/remove-db-dependency",
		"arweave": "^1.10.11",
		"arweave-bundles": "^1.0.3",
		"axios": "^0.21.1",
		"better-sqlite3": "^7.1.2",
		"chokidar": "^3.5.1",
		"concat-stream": "^2.0.0",
		"folder-hash": "^4.0.0",
		"futoin-hkdf": "^1.3.3",
		"jwk-to-pem": "^2.0.4",
		"md5-file": "^5.0.0",
		"mime-types": "^2.1.29",
		"node-fetch": "^2.6.1",
		"node-ipc": "^9.1.4",
		"progress": "^2.0.3",
		"prompt-password": "^1.2.0",
		"prompt-sync": "^4.2.0",
		"prompts": "^2.4.0",
		"smartweave": "0.4.27",
		"typescript": "^4.2.3",
		"utf8": "^3.0.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^5.4.1",
		"@types/chai": "^4.2.15",
		"@types/folder-hash": "^4.0.0",
		"@types/fs-extra": "^9.0.8",
		"@types/jwk-to-pem": "^2.0.0",
		"@types/mime-types": "^2.1.0",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.41",
		"@types/node-fetch": "^2.5.8",
		"@types/node-ipc": "^9",
		"@types/progress": "^2.0.3",
		"@types/prompt-sync": "^4.1.0",
		"@types/prompts": "^2.0.9",
		"@types/utf8": "^2.1.6",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"chai": "^4.3.3",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "latest",
		"husky": "=4",
		"lint-staged": ">=10",
		"mocha": "^8.3.1",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"lintfix": "eslint . --ext .ts --fix",
		"test": "mocha -r ts-node/register tests/**/*.test.ts",
		"build": "tsc",
		"start": "yarn prepare && node ./lib/index.js",
		"prepare": "yarn run build",
		"preversion": "yarn run lint",
		"version": "yarn run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"license": "AGPL-3.0-or-later",
	"author": {
		"name": "Permanent Data Solutions Inc",
		"email": "info@ardrive.io",
		"website": "https://ardrive.io"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ardriveapp/ardrive-daemon.git"
	},
	"files": [
		"lib/**/*"
	],
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --cache --fix"
		]
	}
}
